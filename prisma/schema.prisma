generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String                  @id @default(uuid())
  email                  String                  @unique
  passwordHash           String?
  emailVerified          Boolean                 @default(false)
  stripeCustomerId       String?                 @unique
  subscriptionTier       String                  @default("free")
  subscriptionStatus     String                  @default("active")
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  deletedAt              DateTime?
  mfaEnabled             Boolean                 @default(false)
  mfaSecret              String?
  recoveryCodes          String[]                @default([])
  resetToken             String?
  resetTokenExpiry       DateTime?
  tokenVersion           Int                     @default(0)
  businessPlans          BusinessPlan[]
  competitorProfiles     CompetitorProfile[]
  conversations          Conversation[]
  generatedContent       GeneratedContent[]
  goals                  Goal[]
  missionControlSessions MissionControlSession[]
  subscriptions          Subscription[]
  profile                UserProfile?

  @@index([email])
  @@index([stripeCustomerId])
  @@index([resetToken])
}

model UserProfile {
  id                  String   @id @default(uuid())
  userId              String   @unique
  firstName           String?
  lastName            String?
  avatarUrl           String?
  businessName        String?
  businessType        String?
  industry            String?
  companySize         String?
  goals               Json?
  preferences         Json?
  onboardingCompleted Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Conversation {
  id            String   @id @default(uuid())
  userId        String
  agentId       String
  title         String?
  messages      Json
  metadata      Json?
  lastMessageAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, agentId])
  @@index([lastMessageAt])
}

model MissionControlSession {
  id             String    @id @default(uuid())
  userId         String
  objective      String
  status         String    @default("in_progress")
  agentsInvolved String[]
  context        Json
  results        Json?
  completedAt    DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model GeneratedContent {
  id          String   @id @default(uuid())
  userId      String
  contentType String
  title       String?
  content     String
  metadata    Json?
  status      String   @default("draft")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, contentType])
}

model BusinessPlan {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String?
  content     Json
  status      String   @default("draft")
  version     Int      @default(1)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  goals       Goal[]

  @@index([userId, status])
}

model Goal {
  id             String        @id @default(uuid())
  userId         String
  businessPlanId String?
  title          String
  description    String?
  category       String?
  targetValue    Decimal?
  currentValue   Decimal       @default(0)
  unit           String?
  targetDate     DateTime?
  status         String        @default("active")
  priority       Int           @default(1)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  businessPlan   BusinessPlan? @relation(fields: [businessPlanId], references: [id])
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

model CompetitorProfile {
  id              String               @id @default(uuid())
  userId          String
  name            String
  website         String?
  industry        String?
  description     String?
  trackingSources Json
  metadata        Json?
  isActive        Boolean              @default(true)
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt
  activities      CompetitorActivity[]
  user            User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isActive])
}

model CompetitorActivity {
  id           String            @id @default(uuid())
  competitorId String
  activityType String
  title        String
  description  String?
  sourceUrl    String?
  detectedAt   DateTime
  importance   String            @default("medium")
  metadata     Json?
  createdAt    DateTime          @default(now())
  competitor   CompetitorProfile @relation(fields: [competitorId], references: [id], onDelete: Cascade)

  @@index([competitorId, detectedAt])
}

model Subscription {
  id                   String    @id @default(uuid())
  userId               String
  stripeSubscriptionId String?   @unique
  stripePriceId        String?
  stripeCustomerId     String?
  planName             String
  status               String
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeSubscriptionId])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PreMortemSimulation {
  id              String                @id @default(uuid())
  userId          String
  initiativeTitle String
  description     String?
  context         Json
  parameters      Json
  status          String                @default("in_progress")
  completedAt     DateTime?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  scenarios       FailureScenario[]
  report          PreMortemReport?

  @@index([userId, status])
}

model FailureScenario {
  id                  String               @id @default(uuid())
  simulationId        String
  title               String
  description         String
  category            String
  likelihood          Int
  impact              Int
  riskScore           Int
  detailedAnalysis    String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  simulation          PreMortemSimulation  @relation(fields: [simulationId], references: [id], onDelete: Cascade)
  mitigationStrategies MitigationStrategy[]

  @@index([simulationId, riskScore])
}

model MitigationStrategy {
  id                   String          @id @default(uuid())
  scenarioId           String
  title                String
  description          String
  priority             String
  estimatedCost        String?
  estimatedTime        String?
  resourceRequirements Json?
  effectiveness        Int?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  scenario             FailureScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  @@index([scenarioId, priority])
}

model PreMortemReport {
  id                      String              @id @default(uuid())
  simulationId            String              @unique
  executiveSummary        String
  riskMatrix              Json
  topRisks                Json
  mitigationPlan          Json
  contingencyPlans        Json
  recommendations         Json
  pdfUrl                  String?
  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt
  simulation              PreMortemSimulation @relation(fields: [simulationId], references: [id], onDelete: Cascade)

  @@index([simulationId])
}

model ShadowSelfAssessment {
  id                String                    @id @default(uuid())
  userId            String
  status            String                    @default("in_progress")
  currentStep       Int                       @default(0)
  totalSteps        Int                       @default(0)
  responses         Json
  completedAt       DateTime?
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @updatedAt
  report            ShadowSelfReport?
  coachingPrompts   ShadowSelfCoachingPrompt[]

  @@index([userId, status])
}

model ShadowSelfReport {
  id                    String                 @id @default(uuid())
  assessmentId          String                 @unique
  identifiedBiases      Json
  blindSpots            Json
  decisionPatterns      Json
  impactExamples        Json
  recommendations       Json
  overallScore          Int?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  assessment            ShadowSelfAssessment   @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@index([assessmentId])
}

model ShadowSelfCoachingPrompt {
  id                String                 @id @default(uuid())
  assessmentId      String
  promptType        String
  title             String
  content           String
  targetBias        String?
  deliveredAt       DateTime?
  completedAt       DateTime?
  userResponse      String?
  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt
  assessment        ShadowSelfAssessment   @relation(fields: [assessmentId], references: [id], onDelete: Cascade)

  @@index([assessmentId, deliveredAt])
}

model ShadowSelfReassessment {
  id                    String   @id @default(uuid())
  userId                String
  previousAssessmentId  String
  currentAssessmentId   String
  comparisonData        Json
  progressMetrics       Json
  evolutionPatterns     Json
  scheduledDate         DateTime
  completedAt           DateTime?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId, scheduledDate])
}

model DocumentTemplate {
  id                String              @id @default(uuid())
  name              String
  description       String?
  category          String
  documentType      String
  content           String
  fields            Json
  jurisdictions     String[]            @default([])
  businessTypes     String[]            @default([])
  isCustom          Boolean             @default(false)
  createdBy         String?
  isActive          Boolean             @default(true)
  previewUrl        String?
  metadata          Json?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  documents         GeneratedDocument[]

  @@index([category, isActive])
  @@index([documentType])
}

model GeneratedDocument {
  id                    String             @id @default(uuid())
  userId                String
  templateId            String
  title                 String
  content               String
  customizations        Json?
  jurisdiction          String?
  businessType          String?
  status                String             @default("draft")
  version               Int                @default(1)
  disclaimerAccepted    Boolean            @default(false)
  disclaimerAcceptedAt  DateTime?
  pdfUrl                String?
  docxUrl               String?
  shareToken            String?            @unique
  shareExpiresAt        DateTime?
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt
  template              DocumentTemplate   @relation(fields: [templateId], references: [id])
  versions              DocumentVersion[]
  comments              DocumentComment[]

  @@index([userId, status])
  @@index([templateId])
  @@index([shareToken])
}

model DocumentVersion {
  id          String            @id @default(uuid())
  documentId  String
  version     Int
  content     String
  changes     String?
  createdBy   String
  createdAt   DateTime          @default(now())
  document    GeneratedDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId, version])
}

model DocumentComment {
  id          String            @id @default(uuid())
  documentId  String
  userId      String
  content     String
  position    Json?
  resolved    Boolean           @default(false)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  document    GeneratedDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@index([documentId, resolved])
}

model Integration {
  id                String   @id @default(uuid())
  userId            String
  provider          String
  providerAccountId String?
  accessToken       String?
  refreshToken      String?
  tokenExpiry       DateTime?
  scope             String?
  metadata          Json?
  isActive          Boolean  @default(true)
  lastSyncAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([userId, provider])
  @@index([userId, isActive])
}

model AnalyticsData {
  id           String   @id @default(uuid())
  userId       String
  source       String
  dataType     String
  date         DateTime
  metrics      Json
  dimensions   Json?
  rawData      Json?
  processedAt  DateTime @default(now())
  createdAt    DateTime @default(now())

  @@unique([userId, source, dataType, date])
  @@index([userId, source, date])
}

model InsightNudge {
  id              String    @id @default(uuid())
  userId          String
  title           String
  description     String
  insightType     String
  priority        String    @default("medium")
  metrics         Json?
  recommendations Json?
  actionTaken     Boolean   @default(false)
  actionTakenAt   DateTime?
  dismissedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([userId, actionTaken, dismissedAt])
  @@index([createdAt])
}

model Notification {
  id          String    @id @default(uuid())
  userId      String
  type        String
  category    String
  title       String
  message     String
  data        Json?
  read        Boolean   @default(false)
  readAt      DateTime?
  actionUrl   String?
  priority    String    @default("medium")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId, read])
  @@index([userId, createdAt])
  @@index([category])
}

model NotificationPreference {
  id                String   @id @default(uuid())
  userId            String   @unique
  emailEnabled      Boolean  @default(true)
  pushEnabled       Boolean  @default(false)
  inAppEnabled      Boolean  @default(true)
  categories        Json     @default("{}")
  digestEnabled     Boolean  @default(false)
  digestFrequency   String   @default("daily")
  digestTime        String   @default("09:00")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
}

model PushSubscription {
  id          String   @id @default(uuid())
  userId      String
  endpoint    String   @unique
  keys        Json
  userAgent   String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId, isActive])
}
